@model List<Crud.Models.ViewModels.ListPessoaViewModel>
@{
    ViewBag.Title = "Talentos Cadastrados";
}

<h2>@ViewBag.Title</h2>


<div class="row">
    <div class="col-md-10">
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th></th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Nome</td>
                    <td>@x.Email</td>
                    <td>@x.Cidade</td>
                    <td>@x.Estado</td>
                    <td>
                        <a class="btn btn-warning" href="~/Pessoa/Editar/@x.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Pessoa/Excluir/@x.Id">Excluir</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
